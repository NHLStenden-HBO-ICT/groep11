<Window x:Class="Game_Interaction.Views.Besturingscherm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_Interaction.Views"
        mc:Ignorable="d"
        Title="Besturingscherm" Height="450" Width="800">
    <Grid>
      
        <Image x:Name="Achtergrond" Source="/Image/Bs.PNG" Stretch="Fill"/>  
        <!--Achtergrond-->
        <Button x:Name="Button" Content="Esc" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="TerugNaarHoofdmenu" Width="30" Height="25" Background="White" BorderBrush="Black" FontFamily="Squada one" FontSize="16"/> 
        <!--Esc knop-->
        <Label Content="Terug" HorizontalAlignment="Left" Margin="40,9,0,0" VerticalAlignment="Top" FontFamily="Squada one" FontSize="16" RenderTransformOrigin="0.806,0.577"/>
        <!--Text voor duidelijkheid wat de knop doet-->
        <Label Content="Besturing voor tijdens het spel" FontFamily="Squada one" FontSize="36"/>
        <!--Hoofdtext-->



    </Grid>
</Window>
